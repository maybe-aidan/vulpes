{
    "tasks": [
        {
            "type": "shell",
            "label": "Build Engine",
            "windows":{
                "command": "${workspaceFolder}/engine/build.bat"
            },
            "linux":{
                "command": "${workspaceFolder}/engine/build.sh"
            },
            "options": {
                "cwd": "${workspaceFolder}/engine"
            },
            "problemMatcher":[
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "Build Testbed",
            "windows":{
                "command": "${workspaceFolder}/testbed/build.bat"
            },
            "linux":{
                "command": "${workspaceFolder}/tesbed/build.sh"
            },
            "options": {
                "cwd": "${workspaceFolder}/testbed"
            },
            "problemMatcher":[
                "$gcc"
            ],
            "group": "build",
        },
        {
            "type": "shell",
            "label": "Build Evertything",
            "windows":{
                "command": "${workspaceFolder}/build-all.bat"
            },
            "linux":{
                "command": "${workspaceFolder}/build-all.sh"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher":[
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}